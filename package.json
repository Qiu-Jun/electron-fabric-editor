{
  "name": "electron-fabric-editor",
  "type": "module",
  "version": "0.0.0",
  "private": false,
  "packageManager": "pnpm@10.18.3",
  "author": {
    "name": "June",
    "email": "1601745371@qq.com",
    "url": "https://github.com/Qiu-Jun"
  },
  "license": "MIT",
  "engines": {
    "pnpm": ">=10.18.3",
    "node": ">=22.20.0"
  },
  "volta": {
    "node": "22.20.0",
    "pnpm": "10.18.3"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm build:pkg",
    "prepare": "husky install",
    "dev": "tsx scripts/watch.ts --watch",
    "start": "tsx scripts/watch.ts",
    "dev:pkg": "pnpm -F \"./packages/**\" dev",
    "build:pkg": "pnpm -F \"./packages/**\" build",
    "build": "turbo run build",
    "dev:p": "turbo run dev --parallel",
    "compile": "pnpm build && turbo run compile",
    "pack:dev": "pnpm run build && pnpm -F electron-main run pack:dev",
    "pack:prod": "pnpm run build && pnpm -F electron-main run pack:prod",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"./**/*.{html,vue,ts,js,json,md}\"",
    "commit": "git-cz",
    "clean:cache": "npx rimraf node_modules/.cache/ && npx rimraf node_modules/.vite",
    "clean:lib": "npx rimraf --glob node_modules **/node_modules",
    "reinstall": "npx rimraf pnpm-lock.yaml && pnpm clean:lib"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.4.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@dotenvx/dotenvx": "^1.51.1",
    "@types/node": "^22.14.1",
    "@unocss/eslint-plugin": "^66.5.10",
    "axios": "^1.13.2",
    "cross-env": "^10.1.0",
    "eslint": "9.39.1",
    "eslint-plugin-format": "^1.1.0",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "6.1.2",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3",
    "vite": "^7.2.6",
    "vite-plugin-dts": "^4.5.4"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "lint-staged": {
    "packages/**/.{js,jsx,ts,tsx,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
