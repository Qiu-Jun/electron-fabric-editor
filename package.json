{
    "name": "electron-simple-app",
    "version": "0.0.2",
    "description": "electron-simple-app for June",
    "main": "dist-electron/main/index.js",
    "scripts": {
        "dev": "vite --mode develectron",
        "devweb": "vite --mode devweb",
        "build": "vue-tsc && vite build --mode production",
        "build:all": "npm run build && electron-builder --mac --windows",
        "build:mac": "npm run build && electron-builder --mac",
        "build:win": "npm run build && electron-builder --windows",
        "prettire": "npx prettier --write .",
        "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
        "prepare": "husky install",
        "commit": "npx git-cz"
    },
    "dependencies": {
        "@antv/x6": "^2.11.1",
        "@antv/x6-plugin-dnd": "^2.0.5",
        "@antv/x6-vue-shape": "^2.0.11",
        "@vueuse/core": "^10.2.0",
        "color-gradient-picker-vue3": "^1.0.0",
        "commitlint-config-cz": "^0.13.3",
        "country-code-lookup": "^0.1.0",
        "date-fns": "^2.30.0",
        "dayjs": "^1.11.7",
        "element-plus": "^2.3.5",
        "fuse.js": "^6.6.2",
        "libphonenumber-js": "^1.10.36",
        "lodash-es": "^4.17.21",
        "pinia": "^2.0.33",
        "uuid": "^9.0.0",
        "vue": "^3.2.47",
        "vue-i18n": "^9.2.2",
        "vue-json-pretty": "^2.2.4",
        "vue-router": "^4.1.6"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.4",
        "@types/node": "^18.15.0",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "@vitejs/plugin-vue": "^4.0.0",
        "commitizen": "^4.3.0",
        "cz-customizable": "^7.0.0",
        "electron": "^23.1.3",
        "electron-builder": "^23.6.0",
        "electron-store": "^8.1.0",
        "electron-updater": "^5.3.0",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-vue": "^9.9.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.2.0",
        "prettier": "^2.8.4",
        "sass": "^1.58.3",
        "sass-loader": "^13.2.0",
        "typescript": "^4.9.5",
        "unocss": "^0.53.3",
        "unplugin-auto-import": "^0.16.2",
        "unplugin-vue-components": "^0.24.1",
        "vite": "^4.1.4",
        "vite-plugin-electron": "^0.11.1",
        "vite-plugin-html": "^3.2.0",
        "vite-plugin-svg-icons": "^2.0.1",
        "vite-plugin-vue-setup-extend-plus": "^0.1.0",
        "vue-tsc": "^1.2.0"
    },
    "build": {
        "appId": "com.JuneTool.app",
        "productName": "简易工具",
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "public/**/*"
        ],
        "publish": [
            {
                "provider": "generic",
                "url": ""
            }
        ],
        "directories": {
            "output": "release/${version}"
        },
        "mac": {
            "icon": "./public/icon.png",
            "artifactName": "${productName}_${version}.${ext}",
            "target": [
                "dmg"
            ]
        },
        "win": {
            "icon": "./public/icon.ico",
            "artifactName": "${productName}_${version}.${ext}",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "runAfterFinish": true,
            "installerIcon": "./public/icon.ico",
            "uninstallerIcon": "./public/icon.ico",
            "installerHeaderIcon": "./public/icon.ico",
            "shortcutName": "简易工具"
        }
    },
    "keywords": [
        "electron",
        "vite",
        "vue3"
    ],
    "author": "June",
    "license": "MIT",
    "lint-staged": {
        "*.{vue,js,ts,tsx,jsx}": [
            "eslint --fix",
            "prettier --write --ignore-unknown"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        }
    }
}
