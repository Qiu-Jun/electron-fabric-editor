{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/main/*"],
      "@/*": ["src/render/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "typings/*.d.ts",
    "src/render/**/*.ts",
    "src/render/types/*.ts",
    "src/render/**/*.tsx",
    "src/render/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
